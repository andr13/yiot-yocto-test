import QtQuick 2.12
import QtQuick.Controls 2.12
import QtQuick.Layouts 1.12

import "qrc:/qml/components"
import "qrc:/qml/components/validators"

Page {
    id: deviceRenamePage

    property var controller: ({ name: "" })

    background: Rectangle {
        color: "transparent"
    }

    header: Header {
        id: header
        title: qsTr("Rename ") + controller.name
        backAction: function() { showRPiSettings() }
    }

    Form {
            id: form
            stretched: true

            ColumnLayout {
                Layout.fillHeight: true
                Layout.fillWidth: true
                Layout.topMargin: 40
                Layout.bottomMargin: 20

                spacing: 15

                InputTextField {
                    id: editName
                    label: qsTr("Device name")
                    placeholderText: qsTr("Enter device name")
                    text: controller.name
                    maximumLength: 16
                    validator: ValidatorDeviceName {}
                }

                FormSecondaryButton {
                    Layout.topMargin: 20
                    Layout.bottomMargin: 10
                    text: qsTr("Save")
                    onClicked: {
                        if (editName.text != "") {
                            if (controller.name != editName.text) {
                                controller.setNameToHardware(editName.text)
                            }
                            header.backAction()
                        }
                    }
                }

                Item {
                    Layout.fillWidth: true
                    Layout.fillHeight: true
                }
            }
        }
}
